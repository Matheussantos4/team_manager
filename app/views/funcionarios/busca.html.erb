<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Nome</td>
            <td>Email</td>
            <td>Cargo</td>
            <td>Salário</td>
            <td colspan="1">
        </tr>
    </thead>
    <tbody>
    <% @funcionarios.each do |funcionario| %>
        <tr>
            <td><%= funcionario.nome %> </td>
            <td><%= funcionario.email %> </td>
            <td><%= funcionario.cargo %> </td>
            <td><%= funcionario.salario %> </td>
            <td><%= button_to "Remover", funcionario, method: :delete, class:"btn btn-danger", data: {confirm:"Tem certeza que deseja excluir este funcionário permanentemente?"}  %></td>
        </tr>
    <% end %>
    </tbody>
</table>