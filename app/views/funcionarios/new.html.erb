<%= form_for Funcionario.new do |form| %>
    <div class="row">
        <div class="col-sm-5">
            <div class="form-group">
                <%= form.label :nome %>
                <%= form.text_field :nome, class:"form-control" %>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-5">
            <div class="form-group">
                <%= form.label :email %>
                <%= form.text_field :email, class:"form-control" %>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-2">
            <div class="form-group">
                <%= form.label :cargo %>
                <%= form.text_field :cargo, class:"form-control" %>
            </div>
        </div>
    </div>
                    
    <div class="row">
        <div class="col-sm-2">
                <div class="form-group">
                    <%= form.label :salario %>
                    <%= form.number_field :salario, step:0.01, class:"form-control" %>
                </div>
        </div>
    </div>
    <%= form.submit "Criar", class:"btn btn-primary" %>     
    <% end %>